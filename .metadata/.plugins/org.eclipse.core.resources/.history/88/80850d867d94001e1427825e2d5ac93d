#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int i,j,k;
	for(i=1;i<5;i++){
		for(j=0;j<i;j++){
			if(j==0){
			for(k=5;k>i;k--){

				printf(" ");
			}
			}
			printf("*");
		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
