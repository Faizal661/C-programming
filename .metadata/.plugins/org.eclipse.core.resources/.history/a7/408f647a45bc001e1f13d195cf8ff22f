#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int i,j,k,space=14;
	for(i=1;i<7;i++){
		for(j=0;j<i;j++){
		    printf("*");
		    for(k=space/2;k>i;k--){
		    		    printf("c");
		    		}
		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
