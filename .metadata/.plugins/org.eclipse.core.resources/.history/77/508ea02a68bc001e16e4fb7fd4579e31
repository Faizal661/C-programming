#include <stdio.h>
#include <stdlib.h>

int second(void) {
	int i,j,n;
	n=7;

	for(i=1;i<=n;i++){
		for(j=n;j>0;n--){
		    printf("*");
		}

		printf("\n");
	}

	return EXIT_SUCCESS;
}
